{
  "name": "@statx/core",
  "version": "1.0.0",
  "private": false,
  "description": "Extry tiny smart state manager",
  "keywords": [
    "state",
    "store",
    "management",
    "lit-element",
    "lit",
    "app",
    "shared",
    "global",
    "observer",
    "observable"
  ],
  "homepage": "https://github.com/kaifaty/state#readme",
  "bugs": {
    "url": "https://github.com/kaifaty/state/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "sideEffects": false,
  "type": "module",
  "main": "build/index.js",
  "source": "./src/index.ts",
  "types": "build/index.d.ts",
  "files": [
    "/build",
    "/package.json",
    "/README.md",
    "/src"
  ],
  "scripts": {
    "build": "rimraf ./build/ && npm run build:parcel && npm run build:types",
    "build:parcel": "parcel build",
    "build:types": "tsc",
    "dev": "parcel watch",
    "test": "tsx src/index.test.ts"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./build/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "esmodule"
    }
  }
}
