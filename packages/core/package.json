{
  "name": "@statx/core",
  "version": "1.0.27",
  "private": false,
  "description": "Extry tiny smart state manager",
  "keywords": [
    "state",
    "store",
    "management",
    "lit-element",
    "lit",
    "app",
    "shared",
    "global",
    "observer",
    "observable"
  ],
  "homepage": "https://github.com/kaifaty/statx#readme",
  "bugs": {
    "url": "https://github.com/kaifaty/statx/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "sideEffects": false,
  "exports": {
    "require": "./build/index.js",
    "types": "./build/index.d.ts",
    "default": "./build/index.modern.mjs"
  },
  "main": "./build/index.js",
  "module": "./build/index.module.js",
  "unpkg": "./build/index.umd.js",
  "types": "./build/index.d.ts",
  "files": [
    "/build",
    "/package.json",
    "/README.md",
    "/src"
  ],
  "scripts": {
    "build": "rimraf ./build/ && npm run build:mb && npm run build:types",
    "build:parcel": "parcel build --target=build",
    "build:mb": "microbundle",
    "build:types": "tsc",
    "demo": "parcel --target=demo --port=4444",
    "dev": "parcel watch",
    "test": "tsx src/index.test.ts"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./build/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "esmodule"
    },
    "demo": {
      "context": "browser",
      "distDir": "./build/demo/",
      "source": "./src/demo/index.html",
      "isLibrary": false,
      "includeNodeModules": true,
      "scopeHoist": false
    }
  },
  "gitHead": "7499f9feeba7c5d3f2181ee76c8cf06370cab2e0"
}
