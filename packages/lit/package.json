{
  "name": "@statx/lit",
  "version": "1.0.0",
  "description": "Extry tiny smart state manager",
  "keywords": [
    "state",
    "store",
    "management",
    "lit-element",
    "lit",
    "app",
    "shared",
    "global",
    "observer",
    "observable"
  ],
  "homepage": "https://github.com/kaifaty/state#readme",
  "bugs": {
    "url": "https://github.com/kaifaty/state/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "type": "module",
  "main": "build/index.js",
  "source": "./src/index.ts",
  "types": "build/index.d.ts",
  "files": [
    "/demo/",
    "/src/"
  ],
  "scripts": {
    "build": "parcel build --target=build",
    "demo": "parcel serve --target=demo",
    "dev": "microbundle watch",
    "test": "jest"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "peerDependencies": {
    "@statx/core": "*",
    "lit": "^2.6.1"
  },
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./build/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": {
        "@statx/core": false
      },
      "outputFormat": "esmodule"
    },
    "demo": {
      "context": "browser",
      "distDir": "./build/demo/",
      "source": "./src/demo/index.html",
      "isLibrary": false,
      "includeNodeModules": true,
      "scopeHoist": false
    }
  }
}
