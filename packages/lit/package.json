{
  "name": "@statx/lit",
  "version": "1.0.6",
  "private": false,
  "description": "Extry tiny smart state manager",
  "keywords": [
    "state",
    "store",
    "management",
    "lit-element",
    "lit",
    "app",
    "shared",
    "global",
    "observer",
    "observable"
  ],
  "homepage": "https://github.com/kaifaty/state#readme",
  "bugs": {
    "url": "https://github.com/kaifaty/state/issues"
  },
  "license": "MIT",
  "author": "kaifaty",
  "sideEffects": false,
  "exports": {
    "require": "./build/index.js",
    "types": "./build/index.d.ts",
    "default": "./build/index.js"
  },
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "/build",
    "/package.json",
    "/README.md",
    "/src"
  ],
  "scripts": {
    "build": "rimraf ./build/ && npm run build:parcel && npm run build:types",
    "build:parcel": "parcel build --target=build",
    "build:types": "tsc",
    "demo": "parcel --target=demo",
    "dev": "microbundle watch",
    "test": "tsx src/index.test.ts"
  },
  "browserslist": [
    "last 4 chrome versions"
  ],
  "peerDependencies": {
    "@statx/core": "*",
    "lit": "^2.6.1"
  },
  "targets": {
    "build": {
      "context": "browser",
      "distDir": "./build/",
      "source": "./src/index.ts",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": {
        "@statx/core": false
      },
      "outputFormat": "esmodule"
    },
    "demo": {
      "context": "browser",
      "distDir": "./build/demo/",
      "source": "./src/demo/index.html",
      "isLibrary": false,
      "includeNodeModules": true,
      "scopeHoist": false
    }
  },
  "gitHead": "6467906159d0ef984546beb2855206856a0305fe"
}
