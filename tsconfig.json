{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ESNext",
    "moduleDetection": "force",
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "build", "dist"]
}
